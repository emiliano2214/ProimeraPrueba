@page "/"
@using Microsoft.AspNetCore.Components

<!-- Menú de navegación -->
<div class="container py-3">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">SecretNight</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="#">Inicio</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Productos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Nosotros</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contacto</a></li>
            </ul>
        </div>
    </nav>
</div>

<!-- Encabezado -->
<header class="jumbotron text-center bg-light">
    <div class="container">
        <h1 class="display-4">Bienvenido a SecretNight</h1>
        <p class="lead">Tu tienda online de productos exclusivos</p>
        <a href="#" class="btn btn-primary btn-lg">Explorar productos</a>
    </div>
</header>

<!-- Contenedor de productos -->
<div class="container my-5">
    <h2 class="text-center mb-4">Productos Nuevos</h2>
    <div class="row">
        <div class="col-md-4 mb-4" @* Tarjeta de producto *@>
            <div class="card h-100">
                <img src="Imagenes/2.png" class="card-img-top" alt="Producto 1">
                <div class="card-body text-center">
                    <h5 class="card-title">Producto 1</h5>
                    <p class="card-text">Descripción del producto 1.</p>
                    <a href="#" class="btn btn-success">Agregar al carrito</a>
                </div>
            </div>
        </div>
        <!--Tarjeta visual-->
        <div class="col-md-4 mb-4" @* Tarjeta de producto *@>
            <div class="card h-100">
                <img src="Imagenes/1.png" class="card-img-top" alt="Producto 2">
                <div class="card-body text-center">
                    <h5 class="card-title">Producto 2</h5>
                    <p class="card-text">Descripción del producto 2.</p>
                    <a href="#" class="btn btn-success">Agregar al carrito</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4" @* Tarjeta de producto *@>
            <div class="card h-100">
                <img src="Imagenes/3.png" class="card-img-top" alt="Producto 3">
                <div class="card-body text-center">
                    <h5 class="card-title">Producto 3</h5>
                    <p class="card-text">Descripción del producto 3.</p>
                    <a href="#" class="btn btn-success">Agregar al carrito</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de íconos -->
<div class="container my-5 text-center">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="d-flex align-items-center justify-content-center">
                <img src="Imagenes/b1.jpg" alt="Ícono 1" class="img-fluid mr-3" style="width: 50px;">
                <div>
                    <h5>Envío gratis</h5>
                    <p>Envíos a todo el país</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="d-flex align-items-center justify-content-center">
                <img src="Imagenes/b2.jpg" alt="Ícono 2" class="img-fluid mr-3" style="width: 50px;">
                <div>
                    <h5>Compra segura</h5>
                    <p>Compra con total seguridad</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Formulario para agregar productos -->
<section class="container my-5">
    <h2 class="text-center mb-4">Agregar producto</h2>
    <form class="p-3 border rounded">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Nombre del producto" required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Descripción" required>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" placeholder="Precio" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Agregar producto</button>
    </form>
</section>

<!-- Pie de página -->
<footer class="bg-dark text-white text-center py-3">
    <p class="mb-0">&copy; 2024 SecretNight. Todos los derechos reservados.</p>
</footer>

